---
import Layout from '../../../layouts/Layout.astro';
import { getCollection } from 'astro:content';
import { locales } from '../../../config/tools';
import { useTranslations } from '../../../i18n/utils';

export async function getStaticPaths() {
  return locales.map((lang: string) => ({ params: { lang } }));
}

const { lang } = Astro.params;

// Get translations
const t = await useTranslations(lang);

// Get blog posts for current language
const allPosts = await getCollection('blog');
const posts = allPosts
  .filter(post => post.slug.startsWith(`${lang}/`))
  .sort((a, b) => {
    const dateA = a.data.date ? new Date(a.data.date).valueOf() : 0;
    const dateB = b.data.date ? new Date(b.data.date).valueOf() : 0;
    return dateB - dateA;
  });

// Define page metadata
const title = `${t('blog.title')} - ${t('site.title')}`;
const description = t('blog.subtitle'); 
---

<Layout title={title} description={description} lang={lang}>
  <main class="max-w-4xl mx-auto px-4 py-12 min-h-screen">
    <div class="text-center mb-16">
      <h1 class="text-4xl md:text-5xl font-black text-slate-900 mb-4">{t('blog.title')}</h1>
      <p class="text-lg text-slate-500">
        {t('blog.subtitle')}
      </p>
    </div>

    <div class="grid gap-8">
      {posts.length > 0 ? (
        posts.map(post => {
          // Extract the clean slug (remove lang prefix)
          // e.g., 'en/welcome' -> 'welcome'
          const cleanSlug = post.slug.split('/').slice(1).join('/');
          const coverImage = post.data.coverImage || post.data.image;
          
          return (
            <article class="bg-white rounded-2xl shadow-sm border border-slate-100 overflow-hidden hover:shadow-md transition-shadow">
              <a href={`/${lang}/blog/${cleanSlug}`} class="block md:flex group h-full">
                {coverImage && (
                  <div class="md:w-1/3 h-48 md:h-auto relative overflow-hidden bg-slate-100">
                    <img 
                      src={coverImage} 
                      alt={post.data.title}
                      class="absolute inset-0 w-full h-full object-cover transition-transform duration-500 group-hover:scale-105"
                      referrerpolicy="no-referrer"
                    />
                  </div>
                )}
                <div class="p-6 md:w-2/3 flex flex-col justify-center">
                  <div class="flex items-center gap-3 text-xs text-slate-400 mb-3">
                    {post.data.date && (
                      <time datetime={new Date(post.data.date).toISOString()}>
                        {new Date(post.data.date).toLocaleDateString(lang)}
                      </time>
                    )}
                    <span>â€¢</span>
                    <span>{post.data.author}</span>
                  </div>
                  <h2 class="text-2xl font-bold text-slate-800 mb-3 group-hover:text-blue-600 transition-colors">
                    {post.data.title}
                  </h2>
                  <p class="text-slate-500 line-clamp-2 mb-4">
                    {post.data.description}
                  </p>
                  <span class="text-blue-600 font-bold text-sm flex items-center gap-1">
                    {t('blog.read_more')} 
                    <i class="fa-solid fa-arrow-right"></i>
                  </span>
                </div>
              </a>
            </article>
          );
        })
      ) : (
        <div class="text-center py-20 bg-slate-50 rounded-2xl border border-dashed border-slate-200">
          <p class="text-slate-500">
            {t('blog.no_posts')}
          </p>
        </div>
      )}
    </div>
  </main>
</Layout>
