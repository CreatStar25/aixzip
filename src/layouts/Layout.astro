---
import Header from '../components/common/Header.astro';
import Footer from '../components/common/Footer.astro';
import { getLangFromUrl } from '../i18n/utils';

// 1. 接收页面传来的动态 title 参数
const { title, description, keywords } = Astro.props;

const lang = getLangFromUrl(Astro.url);
const rtlLangs = ['ar', 'fa', 'he', 'ur']; 
const dir = rtlLangs.includes(lang) ? 'rtl' : 'ltr';

// 2. 定义默认标题 (兜底用)
const siteName = "AIxZIP";
const defaultTitle = `${siteName} - Free Online PDF, Image, Video Tools`;
const defaultDesc = "Free online tools to convert, compress, and edit your files. PDF Tools. PDF to Image. Image Tools. Image Compressor · Watermark Remover. Process files locally in your browser.";
---

<!DOCTYPE html>
<html lang={lang} dir={dir}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    
    <title>{title ? title : defaultTitle}</title>
    <meta name="description" content={description || defaultDesc} />
    {keywords && <meta name="keywords" content={keywords} />}
    
    <meta property="og:title" content={title ? title : defaultTitle} />
    <meta property="og:description" content={description || defaultDesc} />

    {/* ✨✨✨ Google Analytics 4 ✨✨✨ */}
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-KBYV6TMKPT"></script>
    <script is:inline>
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());

      gtag('config', 'G-KBYV6TMKPT');
    </script>

    {/* ✨✨✨ Google Tag Manager (Script) ✨✨✨ */}
    <script is:inline>
      (function(w,d,s,l,i){w[l]=w[l]||[];w[l].push({'gtm.start':
      new Date().getTime(),event:'gtm.js'});var f=d.getElementsByTagName(s)[0],
      j=d.createElement(s),dl=l!='dataLayer'?'&l='+l:'';j.async=true;j.src=
      'https://www.googletagmanager.com/gtm.js?id='+i+dl;f.parentNode.insertBefore(j,f);
      })(window,document,'script','dataLayer','GTM-P3LK7DQ5');
    </script>
    {/* ✨✨✨ End Google Tag Manager ✨✨✨ */}
    
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;900&display=swap" rel="stylesheet">

    <link rel="alternate" hreflang="en" href="https://your-site.com/" />
    <link rel="alternate" hreflang="zh-cn" href="https://your-site.com/zh-cn/" />
  </head>
  <body class="bg-slate-50 font-sans min-h-screen flex flex-col">
    {/* ✨✨✨ Google Tag Manager (NoScript) ✨✨✨ */}
    <noscript>
      <iframe src="https://www.googletagmanager.com/ns.html?id=GTM-P3LK7DQ5"
      height="0" width="0" style="display:none;visibility:hidden"></iframe>
    </noscript>
    {/* ✨✨✨ End Google Tag Manager (NoScript) ✨✨✨ */}

    <Header />
    <slot />
    <Footer />
  </body>
</html>