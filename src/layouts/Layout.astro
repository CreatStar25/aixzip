---
import Header from '../components/common/Header.astro';
import Footer from '../components/common/Footer.astro';
import { getLangFromUrl } from '../i18n/utils';

// 1. 接收页面传来的动态 title 参数
const { title } = Astro.props;

const lang = getLangFromUrl(Astro.url);
const rtlLangs = ['ar', 'fa', 'he', 'ur']; 
const dir = rtlLangs.includes(lang) ? 'rtl' : 'ltr';

// 2. 定义默认标题 (兜底用)
const siteName = "AIxZIP";
const defaultTitle = `${siteName} - Free Online PDF, Image, Video Tools`;
---

<!DOCTYPE html>
<html lang={lang} dir={dir}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    
    <title>{title ? title : defaultTitle}</title>
    
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;900&display=swap" rel="stylesheet">

    <link rel="alternate" hreflang="en" href="https://your-site.com/" />
    <link rel="alternate" hreflang="zh-cn" href="https://your-site.com/zh-cn/" />
  </head>
  <body class="bg-slate-50 font-sans min-h-screen flex flex-col">
    <Header />
    <slot />
    <Footer />
  </body>
</html>