---
import { getLangFromUrl, useTranslations } from '../../i18n/utils';
import { ui } from '../../i18n/ui';

const lang = getLangFromUrl(Astro.url);
const t = (key: string) => ui[lang]?.[key] || ui['en'][key];

const languageNames = {
  'en': 'English', 'zh-cn': '简体中文', 'zh-tw': '繁體中文', 'es': 'Español',
  'ar': 'العربية', 'pt': 'Português', 'id': 'Bahasa Indonesia', 'ms': 'Bahasa Melayu',
  'fr': 'Français', 'ru': 'Русский', 'hi': 'हिन्दी', 'ja': '日本語',
  'de': 'Deutsch', 'ko': '한국어', 'tr': 'Türkçe', 'vi': 'Tiếng Việt',
  'th': 'ไทย', 'it': 'Italiano', 'fa': 'فارسی', 'nl': 'Nederlands',
  'pl': 'Polski', 'sv': 'Svenska', 'uk': 'Українська', 'ro': 'Română'
};
const locales = Object.keys(languageNames);
const currentYear = new Date().getFullYear();

// ✨ 核心修复：适应新路由规则的路径生成
const { pathname, search } = Astro.url;
const getLocalizedPath = (targetLang) => {
  const segments = pathname.split('/').filter(Boolean);
  
  // 移除当前的语言前缀 (如果存在)
  if (locales.includes(segments[0])) {
    segments.shift();
  }
  
  if (segments.length === 0) {
    // 首页情况: 英文去根路径 /, 其他去 /lang/
    return targetLang === 'en' ? '/' : `/${targetLang}/`;
  } else {
    // 内页情况: 英文去 /en/..., 其他去 /lang/...
    return `/${targetLang}/${segments.join('/')}${search}`;
  }
};
---

<footer class="bg-slate-900 text-slate-300 py-12 border-t border-slate-800 font-sans relative z-10">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    
    <div class="grid grid-cols-2 md:grid-cols-4 gap-8 mb-12">
      <div class="col-span-2 md:col-span-1">
        <a href={`/${lang === 'en' ? '' : lang}`} class="flex items-center gap-2 mb-4 group w-fit">
           <div class="w-8 h-8 bg-blue-600 rounded-lg flex items-center justify-center text-white text-sm font-black">
            <i class="fa-solid fa-box-open"></i>
          </div>
          <span class="text-xl font-black text-white tracking-tight">
            AI<span class="text-blue-500">x</span>ZIP
          </span>
        </a>
        <p class="text-sm text-slate-500 mb-6 pr-4 leading-relaxed">
          {t('footer.desc')}
        </p>
      </div>

      <div>
        <h3 class="font-bold text-white mb-4 uppercase text-xs tracking-wider opacity-80">{t('footer.col.pdf')}</h3>
        <ul class="space-y-3 text-sm">
          {/* 这里可以使用实际链接 */}
          <li><a href={`/${lang === 'en' ? 'en' : lang}/pdf/pdf-to-image`} class="text-slate-400 hover:text-blue-400 transition">PDF to Image</a></li>
        </ul>
      </div>

      <div>
        <h3 class="font-bold text-white mb-4 uppercase text-xs tracking-wider opacity-80">{t('footer.col.image')}</h3>
        <ul class="space-y-3 text-sm">
          <li><a href={`/${lang === 'en' ? 'en' : lang}/image/image-compressor`} class="text-slate-400 hover:text-blue-400 transition">Image Compressor</a></li>
          <li><a href={`/${lang === 'en' ? 'en' : lang}/image/gemini-remove-waterprint`} class="text-slate-400 hover:text-blue-400 transition">Watermark Remover</a></li>
        </ul>
      </div>

      <div>
        <h3 class="font-bold text-white mb-4 uppercase text-xs tracking-wider opacity-80">{t('footer.col.company')}</h3>
        <ul class="space-y-3 text-sm">
          <li><a href="#" class="text-slate-400 hover:text-blue-400 transition">{t('footer.link.about')}</a></li>
          <li><a href="#" class="text-slate-400 hover:text-blue-400 transition">{t('footer.link.privacy')}</a></li>
          <li><a href="#" class="text-slate-400 hover:text-blue-400 transition">{t('footer.link.terms')}</a></li>
          <li><a href="mailto:support@aixzip.com" class="text-slate-400 hover:text-blue-400 transition">Contact Us</a></li>
        </ul>
      </div>
    </div>

    <div class="border-t border-slate-800 my-8"></div>

    <div class="flex flex-col-reverse md:flex-row justify-between items-center gap-4">
      <div class="text-xs text-slate-500">
        &copy; {currentYear} AIxZIP. {t('footer.rights')}
      </div>

      <div class="relative group">
        <button class="flex items-center gap-2 text-sm font-bold text-slate-400 hover:text-white px-4 py-2 rounded-lg hover:bg-slate-800 transition-colors border border-slate-800 hover:border-slate-700">
            <i class="fa-solid fa-globe"></i> 
            <span>{languageNames[lang]}</span>
            <i class="fa-solid fa-chevron-up text-xs ml-1"></i>
        </button>

        <div class="absolute bottom-full right-0 mb-3 w-[280px] sm:w-[500px] md:w-[600px] bg-white shadow-2xl rounded-2xl border border-slate-200 opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-200 transform translate-y-2 group-hover:translate-y-0 p-6 z-50 origin-bottom-right">
            <div class="flex items-center justify-between border-b border-slate-100 pb-3 mb-3">
                <span class="text-xs font-bold text-slate-400 uppercase tracking-wider">Select Language</span>
                <i class="fa-solid fa-xmark text-slate-300 md:hidden"></i>
            </div>
            <div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 gap-x-2 gap-y-1 max-h-[60vh] overflow-y-auto sm:max-h-none">
                {locales.map((l) => (
                    <a 
                        href={getLocalizedPath(l)} 
                        data-lang-link={l}
                        class={`text-sm px-3 py-2 rounded-lg transition-colors flex items-center justify-between ${lang === l ? 'bg-blue-50 text-blue-600 font-bold' : 'text-slate-600 hover:bg-slate-50 hover:text-slate-900'}`}
                    >
                        {languageNames[l]}
                        {lang === l && <i class="fa-solid fa-check text-xs"></i>}
                    </a>
                ))}
            </div>
            <div class="absolute -bottom-1.5 right-6 w-3 h-3 bg-white border-b border-r border-slate-200 transform rotate-45"></div>
        </div>
      </div>
    </div>
  </div>
</footer>

<script>
  // 监听底部语言链接点击，保存用户偏好
  const links = document.querySelectorAll('footer [data-lang-link]');
  links.forEach(link => {
    link.addEventListener('click', (e) => {
      const lang = link.getAttribute('data-lang-link');
      if (lang) {
        localStorage.setItem('user_lang', lang);
      }
    });
  });
</script>