---
import Layout from '../../layouts/Layout.astro';
import { tools } from '../../config/tools';
import { ui } from '../../i18n/ui';

// 1. ÂÆö‰πâÊé•Êî∂ÁöÑÂèÇÊï∞
interface Props { lang: string; }
const { lang } = Astro.props;

// 2. ËæÖÂä©ÂáΩÊï∞
const t = (key: string) => ui[lang]?.[key] || ui['en'][key];
const getToolName = (id: string) => id.split('-').map(w => w.charAt(0).toUpperCase() + w.slice(1)).join(' ');
const linkPrefix = lang === 'en' ? '' : `/${lang}`;

// 3. ÊûÑÂª∫ SEO Ê†áÈ¢ò (ÂìÅÁâå | ÂÖ≥ÈîÆËØç)
const pageTitle = `${t('site.title')} | ${t('site.seo_keywords')}`;
---

<Layout title={pageTitle} lang={lang}>
  
  <section class="bg-slate-900 text-white pt-24 pb-32 px-4 text-center relative overflow-hidden">
    <div class="max-w-4xl mx-auto relative z-10">
        <div class="inline-block mb-4 px-4 py-1.5 rounded-full bg-blue-500/10 border border-blue-500/20 text-blue-300 text-sm font-bold backdrop-blur-sm">
            üöÄ AIxZIP: The Ultimate AI Tool Kit
        </div>
        <h1 class="text-5xl md:text-7xl font-black mb-6 tracking-tight leading-tight">
            {t('hero.title')}
        </h1>
        <p class="text-xl text-slate-400 mb-10 max-w-2xl mx-auto leading-relaxed">
            {t('hero.subtitle')}
        </p>

        <div class="relative max-w-xl mx-auto group">
            <div class="absolute -inset-1 bg-gradient-to-r from-blue-600 to-cyan-600 rounded-full blur opacity-25 group-hover:opacity-50 transition duration-1000 group-hover:duration-200"></div>
            <div class="relative">
                <div class="absolute inset-y-0 left-0 pl-6 flex items-center pointer-events-none">
                    <i class="fa-solid fa-magnifying-glass text-slate-400 text-lg"></i>
                </div>
                <input 
                    type="text" 
                    id="toolSearch"
                    placeholder={t('hero.search_placeholder')}
                    class="w-full pl-14 pr-6 py-5 rounded-full bg-white text-slate-900 placeholder:text-slate-400 focus:ring-0 outline-none text-lg shadow-xl"
                >
            </div>
        </div>
    </div>
    
    <div class="absolute top-0 left-0 w-full h-full overflow-hidden pointer-events-none">
       <div class="absolute -top-[20%] left-[20%] w-[600px] h-[600px] bg-blue-600/20 rounded-full blur-[120px]"></div>
    </div>
  </section>

  <main class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-16 -mt-20 relative z-20">
    
    <div id="toolsContainer" class="bg-white rounded-3xl shadow-xl border border-slate-100 p-6 md:p-10 mb-20">
      <div class="flex items-center justify-between mb-8 border-b border-slate-100 pb-4">
        <h2 class="text-2xl font-bold text-slate-800 flex items-center gap-2">
          <i class="fa-solid fa-layer-group text-blue-600"></i> {t('section.all')}
        </h2>
      </div>

      <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4 md:gap-6">
        {tools.map((tool) => (
          <a 
            href={`${linkPrefix}/${tool.category}/${tool.id}`}
            class="tool-card group p-6 rounded-2xl bg-slate-50 border border-slate-100 hover:bg-white hover:border-blue-200 hover:shadow-xl hover:-translate-y-1 transition-all duration-300 flex flex-col items-start cursor-pointer relative overflow-hidden"
            data-keywords={`${tool.id} ${tool.category}`.toLowerCase()}
          >
            <div class="w-12 h-12 rounded-xl bg-white shadow-sm border border-slate-100 flex items-center justify-center text-2xl text-blue-600 mb-4 group-hover:bg-blue-600 group-hover:text-white transition-colors z-10">
              <i class={`fa-solid ${tool.icon}`}></i>
            </div>
            <h3 class="font-bold text-lg text-slate-800 group-hover:text-blue-600 transition-colors mb-1 z-10">
              {getToolName(tool.id)}
            </h3>
            <span class="text-xs text-slate-400 uppercase font-bold tracking-wider z-10">
              {tool.category}
            </span>
            <div class="absolute -right-4 -bottom-4 text-9xl text-slate-100 opacity-0 group-hover:opacity-50 transition-opacity rotate-12 z-0">
                <i class={`fa-solid ${tool.icon}`}></i>
            </div>
          </a>
        ))}
      </div>
      <div id="noResults" class="hidden text-center py-20">
        <p class="text-slate-500 text-lg">No tools found.</p>
        <button onclick="document.getElementById('toolSearch').value=''; document.getElementById('toolSearch').dispatchEvent(new Event('input'));" class="mt-2 text-blue-600 font-bold">Reset</button>
      </div>
    </div>

    <div class="grid md:grid-cols-4 gap-6 mb-20">
        <div class="bg-white p-6 rounded-2xl shadow-sm border border-slate-100 text-center">
            <div class="w-14 h-14 mx-auto bg-green-50 text-green-600 rounded-full flex items-center justify-center text-2xl mb-4">
                <i class="fa-solid fa-user-slash"></i>
            </div>
            <h3 class="font-bold text-lg text-slate-800 mb-2">{t('feat.nologin.title')}</h3>
            <p class="text-sm text-slate-500">{t('feat.nologin.desc')}</p>
        </div>
        <div class="bg-white p-6 rounded-2xl shadow-sm border border-slate-100 text-center">
            <div class="w-14 h-14 mx-auto bg-blue-50 text-blue-600 rounded-full flex items-center justify-center text-2xl mb-4">
                <i class="fa-solid fa-microchip"></i>
            </div>
            <h3 class="font-bold text-lg text-slate-800 mb-2">{t('feat.client.title')}</h3>
            <p class="text-sm text-slate-500">{t('feat.client.desc')}</p>
        </div>
        <div class="bg-white p-6 rounded-2xl shadow-sm border border-slate-100 text-center">
            <div class="w-14 h-14 mx-auto bg-purple-50 text-purple-600 rounded-full flex items-center justify-center text-2xl mb-4">
                <i class="fa-solid fa-shield-halved"></i>
            </div>
            <h3 class="font-bold text-lg text-slate-800 mb-2">{t('feat.secure.title')}</h3>
            <p class="text-sm text-slate-500">{t('feat.secure.desc')}</p>
        </div>
        <div class="bg-white p-6 rounded-2xl shadow-sm border border-slate-100 text-center">
            <div class="w-14 h-14 mx-auto bg-orange-50 text-orange-600 rounded-full flex items-center justify-center text-2xl mb-4">
                <i class="fa-solid fa-wifi"></i>
            </div>
            <h3 class="font-bold text-lg text-slate-800 mb-2">{t('feat.offline.title')}</h3>
            <p class="text-sm text-slate-500">{t('feat.offline.desc')}</p>
        </div>
    </div>

    <section class="mb-20">
        <h2 class="text-3xl font-black text-center text-slate-800 mb-10">{t('testi.title')}</h2>
        <div class="grid md:grid-cols-3 gap-8">
            <div class="bg-white p-8 rounded-2xl shadow-lg shadow-slate-200/50 border border-slate-100 relative">
                <i class="fa-solid fa-quote-left text-4xl text-blue-100 absolute top-6 left-6"></i>
                <p class="text-slate-600 relative z-10 mb-6 mt-4 italic">"{t('testi.1.text')}"</p>
                <div class="flex items-center gap-3">
                    <div class="w-10 h-10 rounded-full bg-slate-200 flex items-center justify-center text-slate-500 font-bold">L</div>
                    <div>
                        <div class="font-bold text-slate-800">{t('testi.1.author')}</div>
                        <div class="text-xs text-yellow-500">
                            <i class="fa-solid fa-star"></i><i class="fa-solid fa-star"></i><i class="fa-solid fa-star"></i><i class="fa-solid fa-star"></i><i class="fa-solid fa-star"></i>
                        </div>
                    </div>
                </div>
            </div>
            <div class="bg-white p-8 rounded-2xl shadow-lg shadow-slate-200/50 border border-slate-100 relative">
                <i class="fa-solid fa-quote-left text-4xl text-blue-100 absolute top-6 left-6"></i>
                <p class="text-slate-600 relative z-10 mb-6 mt-4 italic">"Simple, fast and clean. Exactly what I needed for my PDF conversion."</p>
                <div class="flex items-center gap-3">
                    <div class="w-10 h-10 rounded-full bg-blue-200 flex items-center justify-center text-blue-600 font-bold">M</div>
                    <div>
                        <div class="font-bold text-slate-800">Mark D., Developer</div>
                        <div class="text-xs text