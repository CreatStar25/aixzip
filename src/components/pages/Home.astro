---
import Layout from '../../layouts/Layout.astro';
import { tools } from '../../config/tools';
import { getI18nData } from '../../i18n/utils';

// 1. å®šä¹‰æ¥æ”¶çš„å‚æ•°
interface Props { lang: string; }
const { lang } = Astro.props;

// 2. è¾…åŠ©å‡½æ•°
const i18nData = await getI18nData(lang);
const enData = await getI18nData('en');
const t = (key: string) => i18nData.ui[key] || enData.ui[key] || key;

// æŸ¥æ‰¾å·¥å…·åç§°çš„è¾…åŠ©å‡½æ•°
const getToolName = (id: string, category: string) => {
  // 1. ä¼˜å…ˆä½¿ç”¨ UI ç¿»è¯‘é”®å€¼ (æ–°æ–¹å¼)
  const nameKey = `tools.${id}.name`;
  if (i18nData.ui[nameKey]) return i18nData.ui[nameKey];

  // 2. å°è¯•ä» i18n nav æ•°æ®ä¸­æŸ¥æ‰¾ (æ—§æ–¹å¼å…¼å®¹)
  const categoryData = i18nData.nav[category];
  if (categoryData && categoryData.items) {
    const toolItem = categoryData.items.find((item: any) => item.href.includes(id));
    if (toolItem) return toolItem.name;
  }

  // 3. ä½¿ç”¨è‹±æ–‡åå¤‡
  if (enData.ui[nameKey]) return enData.ui[nameKey];
  
  // 4. æœ€åå›é€€ï¼šæ ¼å¼åŒ– ID
  return id.split('-').map(w => w.charAt(0).toUpperCase() + w.slice(1)).join(' ');
};

const linkPrefix = lang === 'en' ? '' : `/${lang}`;

// 3. æ„å»º SEO æ ‡é¢˜ (å“ç‰Œ | å…³é”®è¯)
const pageTitle = `${t('site.title')} | ${t('site.seo_keywords')}`;
const pageDesc = `${t('site.seo_keywords')}. ${t('hero.subtitle')}`;
---

<Layout title={pageTitle} description={pageDesc} lang={lang}>
  
  {/* Hero Section */}
  <section class="bg-slate-900 text-white pt-24 pb-32 px-4 text-center relative overflow-hidden">
    <div class="max-w-4xl mx-auto relative z-10">
        <div class="inline-block mb-4 px-4 py-1.5 rounded-full bg-blue-500/10 border border-blue-500/20 text-blue-300 text-sm font-bold backdrop-blur-sm">
            ğŸš€ AIxZIP: The Ultimate AI Tool Kit
        </div>
        <h1 class="text-5xl md:text-7xl font-black mb-6 tracking-tight leading-tight">
            {t('hero.title')}
        </h1>
        <p class="text-xl text-slate-400 mb-10 max-w-2xl mx-auto leading-relaxed">
            {t('hero.subtitle')}
        </p>

        {/* Quick Access Categories */}
        <div class="grid grid-cols-1 sm:grid-cols-3 gap-4 max-w-3xl mx-auto mb-10">
            <a href={`${linkPrefix}/image/image-compressor`} class="group relative bg-white/5 border border-white/10 hover:bg-white/10 rounded-2xl p-6 transition-all hover:-translate-y-1">
                <div class="absolute inset-0 bg-gradient-to-br from-purple-500/10 to-blue-500/10 rounded-2xl opacity-0 group-hover:opacity-100 transition-opacity"></div>
                <div class="relative z-10 flex flex-col items-center">
                    <div class="w-12 h-12 bg-purple-500/20 text-purple-400 rounded-xl flex items-center justify-center text-2xl mb-3 group-hover:scale-110 transition-transform">
                        <i class="fa-solid fa-image"></i>
                    </div>
                    <h3 class="font-bold text-lg mb-1">{t('home.quick.image.title')}</h3>
                    <p class="text-xs text-slate-400">{t('home.quick.image.desc')}</p>
                </div>
            </a>
            
            <a href={`${linkPrefix}/pdf/pdf-to-image`} class="group relative bg-white/5 border border-white/10 hover:bg-white/10 rounded-2xl p-6 transition-all hover:-translate-y-1">
                <div class="absolute inset-0 bg-gradient-to-br from-red-500/10 to-orange-500/10 rounded-2xl opacity-0 group-hover:opacity-100 transition-opacity"></div>
                <div class="relative z-10 flex flex-col items-center">
                    <div class="w-12 h-12 bg-red-500/20 text-red-400 rounded-xl flex items-center justify-center text-2xl mb-3 group-hover:scale-110 transition-transform">
                        <i class="fa-solid fa-file-pdf"></i>
                    </div>
                    <h3 class="font-bold text-lg mb-1">{t('home.quick.pdf.title')}</h3>
                    <p class="text-xs text-slate-400">{t('home.quick.pdf.desc')}</p>
                </div>
            </a>

            <a href={`${linkPrefix}/file/zip-creator`} class="group relative bg-white/5 border border-white/10 hover:bg-white/10 rounded-2xl p-6 transition-all hover:-translate-y-1">
                <div class="absolute inset-0 bg-gradient-to-br from-blue-500/10 to-cyan-500/10 rounded-2xl opacity-0 group-hover:opacity-100 transition-opacity"></div>
                <div class="relative z-10 flex flex-col items-center">
                    <div class="w-12 h-12 bg-blue-500/20 text-blue-400 rounded-xl flex items-center justify-center text-2xl mb-3 group-hover:scale-110 transition-transform">
                        <i class="fa-solid fa-file-zipper"></i>
                    </div>
                    <h3 class="font-bold text-lg mb-1">{t('home.quick.zip.title')}</h3>
                    <p class="text-xs text-slate-400">{t('home.quick.zip.desc')}</p>
                </div>
            </a>
        </div>

        {/* Search Bar (De-emphasized) */}
        <div class="relative max-w-md mx-auto group opacity-80 hover:opacity-100 transition-opacity">
            <div class="relative">
                <div class="absolute inset-y-0 left-0 pl-4 flex items-center pointer-events-none">
                    <i class="fa-solid fa-magnifying-glass text-slate-500 text-sm"></i>
                </div>
                <input 
                    type="text" 
                    id="toolSearch"
                    placeholder={t('hero.search_placeholder')}
